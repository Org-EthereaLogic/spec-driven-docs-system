{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write.*docs/.*\\.md$",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/doc_pre_write.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write.*docs/.*\\.md$",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/doc_post_write.py"
          }
        ]
      },
      {
        "matcher": "SlashCommand.*/doc-review.*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/doc_post_review.py"
          }
        ]
      }
    ]
  }
}
